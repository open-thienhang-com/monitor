<?xml version="1.0"?>
<configuration>
    <!-- Hadoop Default FS (Namenode URI) -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://localhost:9000</value>
    </property>

    <!-- Hadoop Temporary Directory -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/tmp/hadoop-${user.name}</value>
    </property>

    <!-- Hadoop Username -->
    <property>
        <name>hadoop.proxyuser.${user.name}.hosts</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.${user.name}.groups</name>
        <value>*</value>
    </property>
</configuration>
